
<html>
  <head>
    <meta charset="UTF-8">
  <title>Devotion Speciallity Coffee</title>
  <link rel="shortcut icon" href="data:image/x-icon;" type="image/x-icon">
  <!-- for responsiveness! -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
  </head>
  <body>

    <!-- Navbar -->
    <%= render "shared/navbar" %>

    <%= render "shared/carousel" %>

    <div class="container mt-4">
      <div class="row">
        <!-- Existing Cards -->
        <% 6.times do %>
          <div class="col-12 col-md-6 col-lg-4 mb-4">
            <div class="card">
              <%= render "shared/product-card" %>
            </div>
          </div>
        <% end %>

        <!-- New Card -->
        <div class="col-12 mb-4">
          <div class="card">
            <!-- Background image -->
            <div class="card-img-top bg-image" style="background-image: url('https://images.unsplash.com/photo-1522787345986-d5c7885a889e?ixlib=rb-1.2.1&amp;ixid=eyJhcHBfaWQiOjEyMDd9&amp;auto=format&amp;fit=crop&amp;w=415&amp;q=80'); height: 200px;"></div>
            <div class="card-body">
              <!-- Title -->
              <h5 class="card-title position-absolute start-0 top-0 p-2">Title</h5>
              <!-- Footer with button and description -->
              <div class="card-footer">
                <p class="card-text">Description</p>
                <a href="<%= shops_path %>" class="btn btn-primary">Shop Now</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>



    <%= render "shared/footer" %>

  </div>
</div>
  </body>
</html>
